  }
    n = size;                                        // 3.1
    i = 0;                                           // 3.1
    while (i<n){                                      // 3.3, 5.1
        write(arr[i]);                               // 3.4, 4.1, 5.2
        i = i+1;                                     // 3.1, 5.1
    };
} 

